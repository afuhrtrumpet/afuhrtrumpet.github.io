<!DOCTYPE html>
<html>
<head>
	<title>Alex Fuhr</title>
	<script src="bower_components/webcomponentsjs/webcomponents.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="app.js"></script>
	<link rel="import" href="bower_components/font-roboto/roboto.html">
	<link rel="import" href="bower_components/core-header-panel/core-header-panel.html">
	<link rel="import" href="bower_components/core-toolbar/core-toolbar.html">
	<link rel="import" href="bower_components/paper-shadow/paper-shadow.html">
	<link rel="import" href="bower_components/paper-toast/paper-toast.html">
	<link rel="import" href="bower_components/paper-fab/paper-fab.html">
	<link rel="import" href="bower_components/core-icons/core-icons.html">
	<link rel="import" href="bower_components/paper-tabs/paper-tabs.html">
	<link rel="import" href="bower_components/core-icon-button/core-icon-button.html">
	<link rel="import" href="bower_components/core-menu/core-menu.html">
	<link rel="import" href="bower_components/core-item/core-item.html">
	<link rel="import" href="bower_components/core-drawer-panel/core-drawer-panel.html">
	<link rel="import" href="bower_components/core-animated-pages/core-animated-pages.html">
	<link rel="import" href="bower_components/core-animated-pages/transitions/slide-from-right.html">
	<link rel="import" href="bower_components/ajax-form/ajax-form.html">
	<link rel="import" href="bower_components/paper-input/paper-input-decorator.html">
	<link rel="import" href="bower_components/paper-input/paper-autogrow-textarea.html">
	<link rel="import" href="bower_components/paper-button/paper-button.html">
	<link rel="import" href="info-card.html">
	<link rel="import" href="image-slider.html">
	<link rel="stylesheet" href="style.css" type="text/css">
</head>
<body>

<core-header-panel>
	<core-toolbar class="medium-tall">
	<core-icon-button icon="menu" onclick="document.querySelector('core-drawer-panel').togglePanel();" id="menuToggle"></core-icon-button>
	<div flex>
	<h1>Alex Fuhr</h1>
	</div>
	<i>engineer, developer, maker</i>
	<div class="bottom fit" horizontal layout>
		<paper-tabs selected="0" flex>
			{{#each categories}}
				<paper-tab>{{name}}</paper-tab>
			{{/each}}
			<paper-tab>Contact Me</paper-tab>
		</paper-tabs>
	</div>
	</core-toolbar>
	<paper-shadow z="2"></paper-shadow>
	<div content>
		<core-animated-pages transitions="slide-from-right" selected=0>
			{{#each categories}}
			<section>
				<div class="tiles">
					{{#each cards}}
						<div class="card" slide-from-right>
							<info-card id="{{title}}">
							<h2>{{title}}</h2>
							{{#each paragraphs}}
								<p>{{{this}}}</p>
							{{/each}}
							<image-slider>
							{{#each images}}
								<img src="{{this}}"/>
							{{/each}}
							</image-slider>
							</info-card>
						</div>
					{{/each}}
				</div>
			</section>
			{{/each}}
			<section>
				<div class="card" slide-from-right>
					<info-card id="Contact Me">
					<h2>Contact Me</h2>
					<form id="contactform" is="ajax-form" action="https://getsimpleform.com/messages?form_api_token=3e58e5bdcc192dd90ea2137a28ed95e3" method="post">
							<paper-input-decorator floatingLabel label="Name (required)">
								<input type='text' name='name' required/>
							</paper-input-decorator>
							<paper-input-decorator floatingLabel label="Email (optional, leave if you want a response)">
								<input type='text' name='email' />
							</paper-input-decorator>
							<paper-input-decorator floatingLabel label="Message (required)">
								<paper-autogrow-textarea>
									<textarea name="message" required></textarea>
								</paper-autogrow-textarea>
							</paper-input-decorator>

							<paper-button><input type="submit"/></paper-button>
						</form>
					</info-card>
				</div>
			</section>
		</core-animated-pages>
	</div>
</core-header-panel>
<paper-toast id="toast" text="Form submission was successful!"></paper-toast>
</div>
</body>
</html>
